{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git: 创建Bug修复分支",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/create_branch.sh",
      "args": [
        "debug",
        "${input:branchName}"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "group": "none"
    },
    {
      "label": "Git: 创建UI优化分支",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/create_branch.sh",
      "args": [
        "ui",
        "${input:branchName}"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "group": "none"
    },
    {
      "label": "Git: 创建新功能分支",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/create_branch.sh",
      "args": [
        "new",
        "${input:branchName}"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "group": "none"
    }
  ],
  "inputs": [
    {
      "id": "branchName",
      "description": "输入分支名称",
      "default": "",
      "type": "promptString"
    }
  ]
} 